#include <stdio.h>
#include <stdlib.h>
int SumDigits(int x[],int size){
	int sum=0;
	for(int i=0;i<size;i++){
			sum+=x[i];
		}
	return sum;
}
int main(void) {
	int x[100];
	printf("write a number:");
	fflush(stdin); fflush(stdout);
	scanf("%d",&x[0]);
	printf("the sum of all digits= %d",SumDigits(x,sizeof(x)\sizeof(x[0])));
}
