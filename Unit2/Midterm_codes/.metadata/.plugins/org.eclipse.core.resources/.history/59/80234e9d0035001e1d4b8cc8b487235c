#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int* x[100];
	int sum=0;
	printf("write a number:");
	fflush(stdin); fflush(stdout);
	scanf("%d",&x);
	for(int i=0;i<sizeof(x);i++){
		sum+=x[i];
	}
	printf("the sum of all digits=",sum);
}
