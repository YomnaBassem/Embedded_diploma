#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int Reverse(char x[]);
int main(void) {
	char num[100],Rev=0;
	printf("enter a number:");
	gets(num);
	Rev=Reverse(num);
}
int Reverse(char x[]){
	for(int i=strlen(x);i>=0;i--){
		printf("%d",i-'0');
	}
}
