#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int n;
	float Average, sum=0 ;
	printf("Enter the number of data : ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&n);
	float a[n];
	for(int i=1; i<n+1 ; i++){
		printf("%d. Enter number:",i);
		fflush(stdin); fflush(stdout);
		scanf("%f",&a[i]);
	}
	for(int i=0; i<n; i++){
		sum+=a[i];
	}
	printf("Average=%f",sum/n);
}
