#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
	char string[100];

	printf("Enter the string :");
	fflush(stdin); fflush(stdout);
	scanf("%s",string);

	for(int i=strlen(string)-1; i>=0 ; i--){
		printf("Reverse string is : %c",string[i]);
	}
}
