#include <stdio.h>
#include <stdlib.h>
char Reverse(char a[], int length);
int main(void) {
	char a[100];
	printf("Enter a sentence :");
	gets(a);
	Reverse(a,strlen(a));
}
void Reverse(char a[], int length){
	printf("%c",a[length]);
	length--;
	Reverse(a,length);
}
