#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int y;
	printf("Enter an integer:");
		fflush(stdin); fflush(stdout);
		scanf("%d",&y);
		printf("sum=%d",factorial(y));
}
int factorial(int x){
	if(x==1) return 1;
	return x*factorial(x-1);
}
