#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float x;
	printf("The number you want to check :");
	fflush(stdin); fflush(stdout);
	scanf("%f",&x);
	if ((x&(1<<7))==1){
		printf("%f is negative",x);
	}
	else if ((x&(1<<7))==0){
		printf("%f is positive",x);
	}
	else printf("you entered zero");
}
