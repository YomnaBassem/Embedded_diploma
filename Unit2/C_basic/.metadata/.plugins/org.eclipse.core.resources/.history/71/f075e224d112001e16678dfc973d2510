#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int x;
	printf("The number you want to check :");
	fflush(stdin); fflush(stdout);
	scanf("%d",&x);
	if (x<0){
		printf("%d is negative",x);
	}
	else if (x>0){
		printf("%d is positive",x);
	}
	else {
		printf("you entered zero");
	}
}
